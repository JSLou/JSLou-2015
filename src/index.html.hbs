<div class="row">
		<div class="col1-1 flexslider">
			<ul class="slides">
				<li><img src="img/slider/slide3.jpg" /></li>
				<li><img src="img/slider/slide1.jpg" /></li>
				<li><img src="img/slider/slide2.jpg" /></li>
			</ul>
		</div>
</div><!-- /.row -->


<div class="row">
	<div class="col1-1">
		<h3>Upcoming Events</h3>
	</div>
</div><!-- /.row -->

<div class="row">
	{{#sortByDate events}}
		{{#each this}}
			{{#ifFuture date}}
				{{> event}}
			{{/ifFuture}}
		{{/each}}
	{{/sortByDate}}
</div><!-- /.row -->

<a class="pastEvents btn" href="past-events.html">View past events</a>


<script src="js/jquery.min.js"></script>
